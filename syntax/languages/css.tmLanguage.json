{
  "name": "Liquid CSS",
  "scopeName": "source.css.liquid",
  "injectionSelector": "L:source.css",
  "injections": {
    "L:string": {
      "patterns": [
        { "include": "source.liquid#tags" },
        { "include": "source.liquid#output" }
      ]
    },
    "L:entity.other.attribute-name.class.css": {
      "patterns": [
        {
          "include": "source.liquid#tags"
        },
        {
          "include": "source.liquid#output"
        }
      ]
    }
  },
  "patterns": [
    { "include": "source.liquid#comment-line" },
    { "include": "source.liquid#comment-block" },
    { "include": "source.liquid#tags" },
    { "include": "source.liquid#output" },
    { "include": "source.css" }
  ]
}
