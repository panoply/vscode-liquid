{
  "engine": "shopify",
  "files": {
    "settings": "./theme/config/settings_schema.json",
    "locales": "./theme/locales/en.default.json",
    "snippets": ["/sections/*.liquid"],
    "sections": ["./completions/*.liquid"]
  },
  "format": {
    "ignore": [
      "./completions/*",
      "./ignores/ignore.liquid",
      "./syntax/*"
    ],
    "wrap": 100,
    "crlf": false,
    "indentSize": 2,
    "preserveLine": 2,
    "endNewline": true,
    "liquid": {
      "commentIndent": true,
      "commentNewline": true,
      "delimiterPlacement": "inline",
      "delimiterTrims": "preserve",
      "ignoreTagList": ["capture"],
      "lineBreakSeparator": "before",
      "normalizeSpacing": true,
      "preserveComment": false,
      "quoteConvert": "single",
      "valueForce": "intent"
    },
    "json": {
      "braceAllman": true
    },
    "markup": {
      "attributeSortList": [],
      "forceLeadAttribute": true
    }
  }
}
